<import src="../template/template"></import>
<!--商品轮播图-->
<template is="carousel" data="{{imgUrls}}"></template>
<!--商品-->
<view class="product">{{name}}</view>
<!--价格-->
<view class="price">价格:￥<text>{{ kinds[current].p }}</text></view>
<!--规格-->
<view class="standard">
  <view>规格</view>
  <view class="standard-wrap">
    <block wx:for="{{ kinds }}" wx:for-item="item">
      <view class="content {{ current == index ? 'cur' : '' }}" catchtap="choosetip" data-index="{{ index }}">{{ item.i }}</view>
    </block>
  </view>
</view>
<!--数量-->
<view class="count">
  <view>数量</view>
  <!--购买商品按钮-->
  <view class="order-btn">
    <view style="visibility: {{ count > 0 ? 'visible' : 'hidden' }}" class="del-btn" catchtap="delorder" data-goodsid="{{ item.id }}">-</view>
    <view style="visibility: {{ count > 0 ? 'visible' : 'hidden' }}" class="order-number">{{ count }}</view>
    <view class="add-btn" catchtap="addorder" data-goodsid="{{ item.id }}">+</view>
  </view>
</view>
<!--介绍-->
<view class="introduce">
  {{introduce}}
</view>
<!--加入购物-->
<button catchtap="addcar" class="addbtn">加入购物车</button>