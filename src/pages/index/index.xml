<import src="../template/template" />
<view class="container">
  <!--顶部搜索栏-->
  <view class="search">
    <!--当前位置-->
    <view bindtap="chooseLocation" class="search-site triangle">{{ userSite }}</view>
    <view bindtap="goSearch" class="search-in iconfont icon-sousuo_sousuo">请输入菜系或者菜名</view>
  </view>
  <!--carousel-->
  <template is="carousel" data="{{ imgUrls }}"></template>
  <view class="hot slide">热门推荐</view>
  <view class="hot-content">
    <block wx:for="{{hotList}}" wx:key="unique" wx:for-item="item">
      <view bindtap="gocaidetail" class="hot-wrap">
        <image class="hot-img" src="{{ item.img }}"></image>
        <view class="hot-text">{{ item.text }}</view>
      </view>
    </block>
  </view>
  <view class="recommened hot slide">菜品推荐</view>
  <view class="tuijian">
    <block wx:for="{{ tuijian }}" wx:for-item="item">
      <view bindtap="gocaidetail" class="tuijian-wrap">
        <image src="{{ item.img }}"></image>
        <view class="tuijian-text">{{ item.text }}</view>
        <view class="tuijian-money">￥{{ item.money }}</view>
      </view>
    </block>
  </view>
</view>
