<!-- 可用组件：https://mp.weixin.qq.com/debug/wxadoc/dev/component/ -->
<view class="payorder">
  <view class="restaurant">
    {{ order.order.shop_name }}
  </view>
  <view class="ocunt">
    <text>已点{{ order.order.count }}个菜</text>
    <text>订单号{{ order.order.order_no }}</text>
  </view>
  <view class="typeChoose">
    <view class="tc-top">
      <radio-group class="radio-group" bindchange="radioChange">
        类型:
        <label class="radio" wx:for="{{items}}">
          <radio value="{{item.name}}" checked="{{item.checked}}"/>{{item.value}}
        </label>
      </radio-group>
    </view>

    <view wx:if="{{ iindex != 2 }}">
      <view class="tc-p">
        <picker bindchange="bindPickerChange" value="{{pindex}}" range="{{array}}">
          <view class="picker ppp">
            用餐人数：<text class="p-i">{{array[pindex]}} <text>▼</text></text>
          </view>
        </picker>
      </view>

      <view class="tc-s">
        <picker bindchange="bindPickerChanges" value="{{sindex}}" range="{{arrays}}">
          <view class="picker">
            到店时间：<text class="p-i">{{arrays[sindex]}} <text>▼</text></text>
          </view>
        </picker>

        <picker style="margin-left: 40rpx;" mode="time" value="{{time}}" bindchange="bindTimeChange">
          <view class="picker">
            <text class="p-i">{{time}} <text>▼</text></text>
          </view>
        </picker>
      </view>
    </view>
    <view class="addd" wx:else>
      <view>
        <input placeholder="请输入您的收货地址"/>
      </view>
      <view>
        <input type="number" maxlength="11" placeholder="请输入您的联系方式" />
      </view>
    </view>
    <view class="tc-t">备注:<input placeholder="还要给商家交代点什么吗？"/></view>
  </view>
  <view class="orderList">
    <view class="time">
      下单时间:{{ order.order.addtime }}
    </view>
    <view class="orderList-item">
      <view class="orderList-item-top">
        <text>菜品</text>
        <text>数量</text>
        <text>金额</text>
      </view>
      <view class="orderList-item-one" wx:for="{{ order.dishes }}">
        <text>{{ item.cai_name }}</text>
        <text>{{ item.buynum }}</text>
        <text>{{ item.price }}</text>
      </view>
    </view>
    <view wx:if="{{ order.concessional }}" class="concessional-rate">
      <picker bindchange="concessionalChange" value="{{ index }}" range="{{ order.coupons }}">
        <view class="picker">
          <text>选择优惠券：</text><text>{{order.coupons[index]}}</text>
        </view>
      </picker>
    </view>
    <view class="bottom">
      <text>总价</text>
      <text>{{ order.allMoney }}</text>
    </view>
  </view>
  <view class="tip">实付金额以买单时为准</view>
  <view bindtap="payMoney" class="start-pay">去付款</view>
</view>
